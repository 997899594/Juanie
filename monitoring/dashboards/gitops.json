{
  "dashboard": {
    "title": "GitOps (Flux) 监控",
    "tags": ["gitops", "flux", "kubernetes"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "GitRepository 同步成功率",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate(flux_git_repository_sync_total{sync_status=\"success\"}[5m]) / rate(flux_git_repository_sync_total[5m])",
            "legendFormat": "成功率 - {{resource_name}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "percentunit",
            "label": "成功率",
            "min": 0,
            "max": 1
          },
          {
            "format": "short"
          }
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "pointradius": 5,
        "legend": {
          "show": true,
          "values": true,
          "current": true,
          "avg": true
        },
        "tooltip": {
          "shared": true,
          "value_type": "individual"
        }
      },
      {
        "id": 2,
        "title": "Kustomization 应用延迟 (P95)",
        "type": "graph",
        "gridPos": {
          "x": 12,
          "y": 0,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(flux_kustomization_apply_duration_bucket[5m]))",
            "legendFormat": "P95 延迟 - {{resource_name}}",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(flux_kustomization_apply_duration_bucket[5m]))",
            "legendFormat": "P50 延迟 - {{resource_name}}",
            "refId": "B"
          }
        },
        "yaxes": [
          {
            "format": "s",
            "label": "延迟",
            "min": 0
          },
          {
            "format": "short"
          }
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "legend": {
          "show": true,
          "values": true,
          "current": true,
          "avg": true
        },
        "tooltip": {
          "shared": true,
          "value_type": "individual"
        }
      },
      {
        "id": 3,
        "title": "Flux 错误率",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 8,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate(flux_git_repository_sync_errors[5m])",
            "legendFormat": "GitRepository 错误 - {{resource_name}}",
            "refId": "A"
          },
          {
            "expr": "rate(flux_kustomization_apply_errors[5m])",
            "legendFormat": "Kustomization 错误 - {{resource_name}}",
            "refId": "B"
          },
          {
            "expr": "rate(flux_helm_release_errors[5m])",
            "legendFormat": "HelmRelease 错误 - {{resource_name}}",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "format": "ops",
            "label": "错误/秒",
            "min": 0
          },
          {
            "format": "short"
          }
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [0.1],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "name": "Flux 错误率告警",
          "noDataState": "no_data",
          "notifications": []
        },
        "legend": {
          "show": true,
          "values": true,
          "current": true,
          "total": true
        },
        "tooltip": {
          "shared": true,
          "value_type": "individual"
        }
      },
      {
        "id": 4,
        "title": "活跃的 GitOps 资源数",
        "type": "stat",
        "gridPos": {
          "x": 12,
          "y": 8,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "sum(flux_resources_active{resource_type=\"kustomization\"})",
            "legendFormat": "Kustomization",
            "refId": "A"
          },
          {
            "expr": "sum(flux_resources_active{resource_type=\"helm\"})",
            "legendFormat": "HelmRelease",
            "refId": "B"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "green"
                },
                {
                  "value": 10,
                  "color": "yellow"
                },
                {
                  "value": 50,
                  "color": "red"
                }
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Flux 组件健康状态",
        "type": "stat",
        "gridPos": {
          "x": 18,
          "y": 8,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "flux_component_health{component_name=\"source-controller\"}",
            "legendFormat": "Source Controller",
            "refId": "A"
          },
          {
            "expr": "flux_component_health{component_name=\"kustomize-controller\"}",
            "legendFormat": "Kustomize Controller",
            "refId": "B"
          },
          {
            "expr": "flux_component_health{component_name=\"helm-controller\"}",
            "legendFormat": "Helm Controller",
            "refId": "C"
          },
          {
            "expr": "flux_component_health{component_name=\"notification-controller\"}",
            "legendFormat": "Notification Controller",
            "refId": "D"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "background",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "mappings": [
              {
                "type": "value",
                "options": {
                  "0": {
                    "text": "不健康",
                    "color": "red"
                  },
                  "1": {
                    "text": "健康",
                    "color": "green"
                  }
                }
              }
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "red"
                },
                {
                  "value": 1,
                  "color": "green"
                }
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "GitOps 部署成功率",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 16,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate(flux_deployments_success_total[5m]) / rate(flux_deployments_total[5m])",
            "legendFormat": "成功率 - {{deployment_method}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "percentunit",
            "label": "成功率",
            "min": 0,
            "max": 1
          },
          {
            "format": "short"
          }
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "legend": {
          "show": true,
          "values": true,
          "current": true,
          "avg": true
        },
        "tooltip": {
          "shared": true,
          "value_type": "individual"
        }
      },
      {
        "id": 7,
        "title": "Git 操作延迟",
        "type": "graph",
        "gridPos": {
          "x": 12,
          "y": 16,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(flux_git_operation_duration_bucket{git_operation=\"commit\"}[5m]))",
            "legendFormat": "Commit P95",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(flux_git_operation_duration_bucket{git_operation=\"push\"}[5m]))",
            "legendFormat": "Push P95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.95, rate(flux_git_operation_duration_bucket{git_operation=\"pull\"}[5m]))",
            "legendFormat": "Pull P95",
            "refId": "C"
          },
          {
            "expr": "histogram_quantile(0.95, rate(flux_git_operation_duration_bucket{git_operation=\"clone\"}[5m]))",
            "legendFormat": "Clone P95",
            "refId": "D"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "延迟",
            "min": 0
          },
          {
            "format": "short"
          }
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "legend": {
          "show": true,
          "values": true,
          "current": true,
          "avg": true
        },
        "tooltip": {
          "shared": true,
          "value_type": "individual"
        }
      },
      {
        "id": 8,
        "title": "HelmRelease 操作统计",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 24,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate(flux_helm_release_install_total[5m])",
            "legendFormat": "Install - {{resource_name}}",
            "refId": "A"
          },
          {
            "expr": "rate(flux_helm_release_upgrade_total[5m])",
            "legendFormat": "Upgrade - {{resource_name}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "ops",
            "label": "操作/秒",
            "min": 0
          },
          {
            "format": "short"
          }
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "legend": {
          "show": true,
          "values": true,
          "current": true,
          "total": true
        },
        "tooltip": {
          "shared": true,
          "value_type": "individual"
        }
      },
      {
        "id": 9,
        "title": "Reconciliation 延迟",
        "type": "graph",
        "gridPos": {
          "x": 12,
          "y": 24,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(flux_reconciliation_duration_bucket[5m]))",
            "legendFormat": "P95 - {{resource_kind}}",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(flux_reconciliation_duration_bucket[5m]))",
            "legendFormat": "P50 - {{resource_kind}}",
            "refId": "B"
          }
        },
        "yaxes": [
          {
            "format": "s",
            "label": "延迟",
            "min": 0
          },
          {
            "format": "short"
          }
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "legend": {
          "show": true,
          "values": true,
          "current": true,
          "avg": true
        },
        "tooltip": {
          "shared": true,
          "value_type": "individual"
        }
      },
      {
        "id": 10,
        "title": "部署方式分布",
        "type": "piechart",
        "gridPos": {
          "x": 0,
          "y": 32,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "sum by (deployment_method) (increase(flux_deployments_total[1h]))",
            "legendFormat": "{{deployment_method}}",
            "refId": "A"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "right",
            "values": ["value", "percent"]
          },
          "pieType": "pie",
          "tooltip": {
            "mode": "single"
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": {
              "hideFrom": {
                "tooltip": false,
                "viz": false,
                "legend": false
              }
            }
          }
        }
      },
      {
        "id": 11,
        "title": "部署持续时间",
        "type": "graph",
        "gridPos": {
          "x": 12,
          "y": 32,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(flux_deployment_duration_bucket[5m]))",
            "legendFormat": "P95 - {{deployment_method}}",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(flux_deployment_duration_bucket[5m]))",
            "legendFormat": "P50 - {{deployment_method}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "持续时间",
            "min": 0
          },
          {
            "format": "short"
          }
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "legend": {
          "show": true,
          "values": true,
          "current": true,
          "avg": true
        },
        "tooltip": {
          "shared": true,
          "value_type": "individual"
        }
      }
    ],
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "templating": {
      "list": [
        {
          "name": "namespace",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(flux_git_repository_sync_total, resource_namespace)",
          "refresh": 1,
          "multi": true,
          "includeAll": true
        },
        {
          "name": "project",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(flux_deployments_total, deployment_project_id)",
          "refresh": 1,
          "multi": true,
          "includeAll": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{alertname=~\"Flux.*\"}",
          "iconColor": "red",
          "name": "Flux 告警",
          "tagKeys": "alertname,severity"
        }
      ]
    }
  }
}
