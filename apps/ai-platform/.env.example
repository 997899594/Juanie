# Server Configuration
PORT=3001
NODE_ENV=development

# Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/ai_platform

# Lakera Guard (Safety)
LAKERA_GUARD_API_KEY=your_lakera_api_key_here

# Model Router Configuration
USE_AI_ROUTER=false  # Set to true to use Flash-based classification

# Context Caching
CONTEXT_CACHE_TTL=3600  # 1 hour in seconds
CONTEXT_CACHE_REFRESH_INTERVAL=300  # 5 minutes

# Kubernetes Configuration
KUBECONFIG_PATH=~/.kube/config

# Observability
ENABLE_METRICS=true
METRICS_PORT=9090

# Multi-tenant
DEFAULT_TENANT_ID=default
