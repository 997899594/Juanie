# Application
NODE_ENV=development
APP_URL=http://localhost:3001
PORT=3001

# Database (通过 PgBouncer 连接)
DATABASE_URL=postgresql://devops_user:devops_password@localhost:6432/devops

# 直连数据库 (用于迁移)
DATABASE_URL_DIRECT=postgresql://devops_user:devops_password@localhost:5432/devops

# Dragonfly (Redis 兼容，25x 性能提升)
REDIS_URL=redis://localhost:6379

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# GitLab OAuth
GITLAB_CLIENT_ID=your_gitlab_client_id
GITLAB_CLIENT_SECRET=your_gitlab_client_secret

# Webhook Secrets
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret
GITLAB_WEBHOOK_SECRET=your_gitlab_webhook_secret

# Email Service (Resend)
RESEND_API_KEY=your_resend_api_key
EMAIL_FROM=notifications@yourapp.com

# AI Services
# Ollama (本地 LLM，推荐)
OLLAMA_HOST=http://localhost:11434

# 云端 AI (可选)
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
GOOGLE_AI_API_KEY=your_google_ai_api_key

# Kubernetes (optional)
KUBECONFIG_PATH=/path/to/kubeconfig

# Monitoring (optional)
SENTRY_DSN=your_sentry_dsn
NEW_RELIC_LICENSE_KEY=your_newrelic_key

# MinIO (对象存储)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=admin
MINIO_SECRET_KEY=admin123456

# K3s (Kubernetes)
KUBECONFIG_PATH=/path/to/kubeconfig  # 可选，不配置则使用默认路径 ~/.kube/config

# OpenTelemetry (分布式追踪)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces  # Tempo 端点
