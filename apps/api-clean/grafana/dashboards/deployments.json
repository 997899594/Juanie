{
  "dashboard": {
    "title": "AI DevOps Platform - Deployments",
    "tags": ["deployments", "ci-cd"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Deployment Success Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(deployments_total{status=\"success\"}[1h])) / sum(rate(deployments_total[1h]))"
          }
        ],
        "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 }
      },
      {
        "id": 2,
        "title": "Deployments per Hour",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(deployments_total[1h]))"
          }
        ],
        "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 }
      },
      {
        "id": 3,
        "title": "Average Deployment Duration",
        "type": "stat",
        "targets": [
          {
            "expr": "avg(deployment_duration_seconds)"
          }
        ],
        "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 }
      },
      {
        "id": 4,
        "title": "Failed Deployments",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(deployments_total{status=\"failed\"}[1h]))"
          }
        ],
        "gridPos": { "x": 18, "y": 0, "w": 6, "h": 4 }
      },
      {
        "id": 5,
        "title": "Deployments Over Time",
        "type": "graph",
        "targets": [
          {
            "expr": "sum by (status) (rate(deployments_total[5m]))",
            "legendFormat": "{{status}}"
          }
        ],
        "gridPos": { "x": 0, "y": 4, "w": 24, "h": 8 }
      },
      {
        "id": 6,
        "title": "Deployment Duration by Environment",
        "type": "graph",
        "targets": [
          {
            "expr": "avg by (environment) (deployment_duration_seconds)",
            "legendFormat": "{{environment}}"
          }
        ],
        "gridPos": { "x": 0, "y": 12, "w": 12, "h": 8 }
      },
      {
        "id": 7,
        "title": "Pipeline Queue Length",
        "type": "graph",
        "targets": [
          {
            "expr": "pipeline_queue_length"
          }
        ],
        "gridPos": { "x": 12, "y": 12, "w": 12, "h": 8 }
      },
      {
        "id": 8,
        "title": "Recent Deployments",
        "type": "logs",
        "targets": [
          {
            "expr": "{job=\"api\"} |= \"deployment\""
          }
        ],
        "gridPos": { "x": 0, "y": 20, "w": 24, "h": 8 }
      }
    ],
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    }
  }
}
