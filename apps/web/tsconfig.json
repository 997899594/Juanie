{
  "extends": "../../configs/tsconfig/dom.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@juanie/shared": ["../../packages/shared/src"],
      "@juanie/ui": ["../../packages/ui/src"]
    },
    "types": ["vite/client", "naive-ui/volar", "node"],
    "skipLibCheck": true,
    "composite": false,
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo"
  },
  "include": ["src/**/*", "env.d.ts", "*.config.*"],
  "exclude": [
    "node_modules",
    "dist",
    "auto-imports.d.ts",
    "components.d.ts",
    "**/*.test.*",
    "**/*.spec.*"
  ]
}
