{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": ["../../configs/tsconfig/dom-lib.json"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "customConditions": ["development", "bun"],
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": false,
    "isolatedModules": true,
    "verbatimModuleSyntax": true
  },
  "include": ["src/**/*", "env.d.ts", "vite.config.ts", "tailwind.config.ts"],
  "exclude": ["dist", "node_modules"]
}
