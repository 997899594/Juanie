    "@opentelemetry/semantic-conventions": "^1.29.0",
    "@types/node": "^24.7.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.4"
  },
  "engines": {
    "node": ">=22.0.0",
    "bun": ">=1.0.0"
  }
}
