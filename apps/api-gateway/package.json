    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/csrf-protection": "^7.1.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/sse": "^0.4.0",
    "@juanie/core": "workspace:*",
    "@juanie/types": "workspace:*",
    "@juanie/service-foundation": "workspace:*",
    "@juanie/service-business": "workspace:*",
    "@juanie/service-extensions": "workspace:*",
    "@nestjs/common": "^11.1.7",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.7",
    "@nestjs/platform-fastify": "^11.1.7",
    "@trpc/server": "^11.7.1",
    "drizzle-orm": "^0.44.7",
