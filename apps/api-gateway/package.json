{
  "name": "@juanie/api-gateway",
  "version": "0.1.0",
  "description": "API Gateway - Aggregates all service routers",
  "type": "module",
  "main": "dist/main.js",
  "exports": {
    "./router-types": "./src/trpc/trpc.router.ts"
  },
  "scripts": {
    "dev": "bun --watch src/main.ts",
