{
  "name": "@juanie/api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "nitro dev",
    "build": "tsc --noEmit && nitro build",
    "start": "nitro preview",
    "type-check": "tsc --noEmit --watch --preserveWatchOutput",
    "clean": "rm -rf dist .nitro .tsbuildinfo",
    "drizzle:generate": "drizzle-kit generate",
    "drizzle:migrate": "drizzle-kit migrate",
    "drizzle:studio": "drizzle-kit studio",
    "drizzle:push": "drizzle-kit push",
    "docs": "typedoc --out docs --plugin typedoc-plugin-markdown"
  },
  "dependencies": {
    "@juanie/shared": "workspace:*",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@node-rs/argon2": "2.0.2",
    "@opentelemetry/auto-instrumentations-node": "0.65.0",
    "@opentelemetry/sdk-node": "0.206.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@scalar/api-reference": "^1.38.0",
    "@trpc/server": "^11.6.0",
    "drizzle-orm": "^0.44.6",
    "drizzle-zod": "^0.8.3",
    "h3": "^1",
    "ioredis": "^5.8.1",
    "jsonwebtoken": "^9.0.2",
    "postgres": "^3.4.7",
    "reflect-metadata": "^0.2.2",
    "trpc-to-openapi": "^3.1.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "drizzle-kit": "^0.31.5",
    "nitropack": "^2.12.6",
    "typedoc": "^0.28.0",
    "typedoc-plugin-markdown": "^4.9.0"
  },
  "engines": {
    "node": ">=22.0.0",
    "bun": ">=1.0.0"
  }
}
