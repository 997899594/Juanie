{
  "name": "@juanie/api",
  "version": "0.1.0",
  "description": "AI DevOps Platform",
  "type": "module",
  "main": "dist/main.js",
  "packageManager": "bun@1.1.38",
  "scripts": {
    "dev": "bun --hot src/main.ts",
    "build": "bun build src/main.ts --outdir dist --target bun",
    "start": "bun run dist/main.js",
    "type-check": "bun tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@juanie/core-database": "workspace:*",
    "@juanie/core-types": "workspace:*",
    "@juanie/core-utils": "workspace:*",
    "@bull-board/api": "^6.14.0",
    "@bull-board/fastify": "^6.14.0",
    "@kubernetes/client-node": "^1.4.0",
    "@nestjs/common": "^11.1.7",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.7",
    "@nestjs/platform-fastify": "^11.1.7",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.66.0",
    "@opentelemetry/exporter-prometheus": "^0.207.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.207.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/sdk-node": "^0.207.0",
    "@opentelemetry/semantic-conventions": "^1.37.0",
    "@trpc/server": "^11.7.0",
    "arctic": "^3.7.0",
    "bullmq": "^5.62.0",
    "handlebars": "^4.7.8",
    "ioredis": "^5.8.2",
    "minio": "^8.0.6",
    "ollama": "^0.6.0",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@types/bun": "^1.2.0",
    "@types/node": "^24.9.1",
    "@vitest/coverage-v8": "^4.0.4",
    "@vitest/ui": "^4.0.4",
    "drizzle-kit": "^0.31.5",
    "typescript": "^5.9.3",
    "vitest": "^4.0.4"
  }
}
