{
  "name": "@juanie/api",
  "version": "1.0.0",
  "description": "Modern Juanie API Server with Hono + tRPC 11 + Drizzle + Valibot",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "chmod +x scripts/dev.sh && ./scripts/dev.sh",
    "dev:direct": "dotenvx run --env-file=.env -- tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/db/seed.ts",
    "db:setup": "chmod +x scripts/db-setup.sh && ./scripts/db-setup.sh",
    "db:setup:seed": "chmod +x scripts/db-setup.sh && ./scripts/db-setup.sh --seed",
    "type-check": "tsc --noEmit",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/"
  },
  "dependencies": {
    "@hono/prometheus": "^1.0.0",
    "@hono/trpc-server": "^0.3.2",
    "@trpc/server": "^11.0.0-rc.553",
    "arctic": "^3.7.0",
    "date-fns": "^4.1.0",
    "drizzle-kit": "^0.30.1",
    "drizzle-orm": "^0.36.4",
    "drizzle-valibot": "^0.4.2",
    "hono": "^4.6.14",
    "ioredis": "^5.4.1",
    "oslo": "^1.2.1",
    "p-queue": "^8.0.1",
    "p-retry": "^6.2.1",
    "p-timeout": "^6.1.3",
    "pino": "^9.0.0",
    "postgres": "^3.4.5",
    "superjson": "^2.2.1",
    "valibot": "^1.0.0-beta.14"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.51.0",
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2",
    "tsx": "^4.19.2",
    "nodemon": "^3.1.7",
    "pino-pretty": "^11.0.0"
  }
}
