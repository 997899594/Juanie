  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "catalog:",
    "drizzle-kit": "^0.31.5",
    "nitropack": "^2.12.6",
    "tsx": "^4.20.6",
    "typedoc": "^0.27.6",
    "typedoc-plugin-markdown": "^4.2.10",
    "typescript": "^5.9.3",
    "vitest": "catalog:"
  },
  "peerDependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@trpc/server": "^11.0.0",
    "drizzle-orm": "^0.44.0",
    "zod": "^4.0.0"
  },
  "engines": {
    "node": ">=22.0.0",
    "bun": ">=1.0.0"
  },
  "packageManager": "bun@1.2.23"
