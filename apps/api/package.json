    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@opentelemetry/auto-instrumentations-node": "^0.64.6",
    "@opentelemetry/sdk-node": "^0.205.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@scalar/api-reference": "^1.37.0",
    "@trpc/server": "^11.6.0",
    "drizzle-orm": "^0.44.6",
    "drizzle-zod": "^0.8.3",
    "h3": "^1.15.4",
    "ioredis": "^5.8.0",
    "jsonwebtoken": "^9.0.2",
    "postgres": "^3.4.7",
    "reflect-metadata": "^0.2.2",
    "trpc-to-openapi": "^3.0.1",
    "zod": "catalog:"
