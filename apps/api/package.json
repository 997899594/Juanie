{
  "name": "@juanie/api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./shared": {
      "types": "./dist/shared.d.ts"
    }
  },
  "scripts": {
    "dev": "nitro dev",
    "dev:bun": "bun --bun nitro dev",
