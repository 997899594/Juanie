{
  "name": "@juanie/api-ai",
  "version": "0.1.0",
  "description": "AI-Native DevOps Platform API - 2025 Bleeding Edge Edition",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "build": "nest build --builder swc",
    "dev": "nest start --watch --builder swc",
    "start": "nest start",
    "start:debug": "nest start --debug --watch --builder swc",
    "start:prod": "node --enable-source-maps dist/main.js",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "vitest --config vitest.e2e.config.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun run src/database/seed.ts",
    "docker:build": "docker build -t juanie-api-ai .",
    "docker:run": "docker run -p 3001:3001 juanie-api-ai",
    "k8s:deploy": "kubectl apply -f k8s/",
    "observability:start": "docker-compose -f docker-compose.observability.yml up -d"
  },
