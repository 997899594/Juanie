# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/juanie_ai_devops"

# Application Configuration
NODE_ENV="development"
PORT=3001
API_PREFIX="api/v1"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# OAuth Configuration - GitHub
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"
GITHUB_CALLBACK_URL="http://localhost:3001/auth/github/callback"

# OAuth Configuration - GitLab
GITLAB_CLIENT_ID="your-gitlab-client-id"
GITLAB_CLIENT_SECRET="your-gitlab-client-secret"
GITLAB_CALLBACK_URL="http://localhost:3001/auth/gitlab/callback"
GITLAB_URL="https://gitlab.com"

# AI Services Configuration
OPENAI_API_KEY="sk-your-openai-api-key"
OPENAI_MODEL="gpt-4-turbo-preview"
ANTHROPIC_API_KEY="your-anthropic-api-key"
ANTHROPIC_MODEL="claude-3-sonnet-20240229"

# Redis Configuration (for caching and queues)
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""
REDIS_DB=0

# Monitoring and Observability
SENTRY_DSN="your-sentry-dsn"
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Security Configuration
CORS_ORIGIN="http://localhost:3000"
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100
HELMET_ENABLED=true

# Feature Flags
AI_ASSISTANT_ENABLED=true
COST_TRACKING_ENABLED=true
SECURITY_SCANNING_ENABLED=true
SUSTAINABILITY_METRICS_ENABLED=true

# External Services
WEBHOOK_SECRET="your-webhook-secret-for-git-providers"

# Logging
LOG_LEVEL="info"
LOG_FORMAT="json"

# Development
SWAGGER_ENABLED=true
DEBUG_MODE=false