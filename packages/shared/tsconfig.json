{
  "extends": "../../configs/tsconfig/node.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "allowImportingTsExtensions": false,
    "composite": true,
    "declaration": true,
    "noEmit": false,
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
    "paths": {
      "@/*": ["./src/*"],
      "@juanie/shared": ["../shared/src"]
    }
  },
  "include": ["src/**/*", "*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.*", "**/*.spec.*"]
}
