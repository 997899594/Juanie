{
  "name": "@juanie/database",
  "version": "0.1.0",
  "description": "Database schemas and relations for Drizzle ORM",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./schemas/auth": {
      "types": "./dist/schemas/auth/index.d.ts",
      "default": "./dist/schemas/auth/index.js"
    },
    "./schemas/organization": {
      "types": "./dist/schemas/organization/index.d.ts",
      "default": "./dist/schemas/organization/index.js"
    },
    "./schemas/project": {
      "types": "./dist/schemas/project/index.d.ts",
      "default": "./dist/schemas/project/index.js"
    },
    "./schemas/deployment": {
      "types": "./dist/schemas/deployment/index.d.ts",
      "default": "./dist/schemas/deployment/index.js"
    },
    "./schemas/repository": {
      "types": "./dist/schemas/repository/index.d.ts",
      "default": "./dist/schemas/repository/index.js"
    },
    "./schemas/gitops": {
      "types": "./dist/schemas/gitops/index.d.ts",
      "default": "./dist/schemas/gitops/index.js"
    },
    "./schemas/ai": {
      "types": "./dist/schemas/ai/index.d.ts",
      "default": "./dist/schemas/ai/index.js"
    },
    "./schemas/monitoring": {
      "types": "./dist/schemas/monitoring/index.d.ts",
      "default": "./dist/schemas/monitoring/index.js"
    },
    "./schemas/system": {
      "types": "./dist/schemas/system/index.d.ts",
      "default": "./dist/schemas/system/index.js"
    },
    "./relations": {
      "types": "./dist/relations.d.ts",
      "default": "./dist/relations.js"
    }
  },
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "drizzle-orm": "0.45.0"
  },
  "devDependencies": {
    "@juanie/config-typescript": "workspace:*",
    "@types/node": "^24.7.0",
    "typescript": "^5.9.3"
  }
}
