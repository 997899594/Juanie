{
  "name": "@juanie/core",
  "version": "0.1.0",
  "description": "Core infrastructure - Database, Queue, Events, SSE, Utils",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./database": {
      "types": "./dist/database/index.d.ts",
      "default": "./dist/database/index.js"
    },
    "./encryption": {
      "types": "./dist/encryption/index.d.ts",
      "default": "./dist/encryption/index.js"
    },
    "./errors": {
      "types": "./dist/errors/index.d.ts",
      "default": "./dist/errors/index.js"
    },
    "./events": {
      "types": "./dist/events/index.d.ts",
      "default": "./dist/events/index.js"
    },
    "./k8s": {
      "types": "./dist/k8s/index.d.ts",
      "default": "./dist/k8s/index.js"
    },
    "./flux": {
      "types": "./dist/flux/index.d.ts",
      "default": "./dist/flux/index.js"
    },
    "./observability": {
      "types": "./dist/observability/index.d.ts",
      "default": "./dist/observability/index.js"
    },
    "./queue": {
      "types": "./dist/queue/index.d.ts",
      "default": "./dist/queue/index.js"
    },
    "./redis": {
      "types": "./dist/redis/index.d.ts",
      "default": "./dist/redis/index.js"
    },
    "./tokens": {
      "types": "./dist/tokens/index.d.ts",
      "default": "./dist/tokens/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "default": "./dist/utils/index.js"
    }
  },
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@juanie/database": "workspace:*",
    "@juanie/types": "workspace:*",
    "@nestjs/bull": "^10.2.1",
    "@nestjs/common": "^11.1.7",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.7",
    "@nestjs/event-emitter": "^3.0.1",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.65.0",
    "@opentelemetry/exporter-jaeger": "^2.1.0",
    "bull": "^4.16.3",
    "bullmq": "^5.36.3",
    "drizzle-orm": "0.45.0",
    "ioredis": "^5.4.2",
    "nestjs-pino": "^4.5.0",
    "picocolors": "^1.1.1",
    "pino": "^9.6.0",
    "pino-http": "^10.0.0",
    "pino-pretty": "^13.0.0",
    "postgres": "^3.4.7",
    "sql-formatter": "^15.6.12"
  },
  "devDependencies": {
    "@juanie/config-typescript": "workspace:*",
    "@types/node": "^24.7.0",
    "typescript": "^5.9.3"
  }
}
