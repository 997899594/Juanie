{
  "name": "@juanie/ui",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "development": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./styles": {
      "development": "./src/styles.css",
      "default": "./src/styles.css"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "tsc --noEmit --watch --preserveWatchOutput",
    "build": "tsc --noEmit && vite build && tsc --emitDeclarationOnly --outDir dist",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist .tsbuildinfo"
  },
  "peerDependencies": {
    "vue": "^3.5.22"
  }
}
