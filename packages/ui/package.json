{
  "name": "@juanie/ui",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./styles": "./dist/ui.css",
    "./dist/ui.css": "./dist/ui.css"
  },
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": [
    "*.css",
    "*.vue"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && vue-tsc --declaration --emitDeclarationOnly",
    "build:fast": "vite build",
    "build:ultra-fast": "vite build --config vite.config.fast.ts",
    "clean": "rm -rf dist .tsbuildinfo node_modules/.vite",
    "clean:build": "./scripts/clean-build.sh && bun run build",
    "clean:fast": "./scripts/clean-build.sh && bun run build:fast"
  },
  "dependencies": {
    "@tanstack/vue-table": "^8.21.3",
    "@unovis/ts": "^1.6.1",
    "@unovis/vue": "^1.6.1",
    "@vee-validate/zod": "^4.15.1",
    "@vueuse/core": "^13.9.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "embla-carousel-vue": "^8.6.0",
    "radix-vue": "^1.9.0",
    "reka-ui": "^2.5.1",
    "tailwind-merge": "^3.3.1",
    "tslib": "^2.8.1",
    "vaul-vue": "^0.4.1",
    "vee-validate": "^4.15.1",
    "vue-sonner": "^2.0.9"
  },
  "peerDependencies": {
    "vue": "^3.5.22"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.14",
    "@vitejs/plugin-vue": "^6.0.1",
    "tailwindcss": "^4.1.14",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.9",
    "vite-plugin-dts": "^4.5.4",
    "vue-tsc": "^3.1.1"
  }
}
