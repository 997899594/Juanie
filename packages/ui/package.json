{
  "name": "@juanie/ui",
  "version": "0.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "development": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./styles": "./dist/index.css",
    "./tailwind.config": "./tailwind.config.ts",
    "./theme.config": "./theme.config.ts",
    "./theme": {
      "development": "./src/theme/index.ts",
      "types": "./dist/theme/index.d.ts",
      "import": "./dist/theme/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "tailwind.config.ts",
    "theme.config.ts"
  ],
  "scripts": {
    "dev": "concurrently \"tsc --noEmit --watch --preserveWatchOutput\" \"vite dev\"",
    "build": "tsc --noEmit && vite build && tsc --emitDeclarationOnly --outDir dist",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist .tsbuildinfo",
    "preview": "vite dev"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "@vitejs/plugin-vue": "^5.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  }
}
