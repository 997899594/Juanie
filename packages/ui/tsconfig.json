{
  "extends": "../../configs/tsconfig/dom.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "composite": true,
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
    "types": ["vite/client", "naive-ui/volar"],
    "declaration": true,
    "declarationMap": true,
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "paths": {
      "@/*": ["./src/*"],
      "@juanie/shared": ["../shared/src"]
    }
  },
  "include": ["src/**/*", "uno/**/*", "*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.*", "**/*.spec.*"]
}
