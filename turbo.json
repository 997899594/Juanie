{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".output/**", ".nitro/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "drizzle:generate": {
      "cache": false,
      "outputs": ["src/drizzle/migrations/**"]
    },
    "drizzle:migrate": {
      "cache": false
    }
  }
}
