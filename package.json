{
  "name": "juanie",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "preview": "turbo preview --parallel",
    "packages:build": "turbo build --filter='./packages/*'",
    "packages:dev": "turbo dev --filter='./packages/*'",
    "web:dev": "turbo dev --filter='@juanie/web'",
    "api:dev": "turbo dev --filter='@juanie/api'",
    "type-check": "turbo type-check",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "clean": "turbo clean && rm -rf node_modules/.cache",
    "fresh": "bun run clean && bun i && bun run dev"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@changesets/cli": "^2.29.7",
    "@tailwindcss/vite": "^4.1.14",
    "@trpc/client": "^11.6.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^24.7.0",
    "@types/nprogress": "^0.2.3",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@vue/tsconfig": "^0.8.1",
    "@vueuse/components": "^13.9.0",
    "@vueuse/core": "^13.9.0",
    "axios": "^1.12.2",
    "dayjs": "^1.11.18",
    "drizzle-kit": "^0.31.5",
    "echarts": "^6.0.0",
    "estree-walker": "^3.0.3",
    "husky": "^9.1.7",
    "lint-staged": "16.2.3",
    "lodash-es": "^4.17.21",
    "lucide-vue-next": "^0.544.0",
    "nprogress": "^0.2.0",
    "pinia": "^3.0.3",
    "socket.io-client": "^4.8.1",
    "tailwindcss": "^4.1.14",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3",
    "unplugin-auto-import": "^20.2.0",
    "unplugin-vue-components": "^29.1.0",
    "vite": "^7.1.9",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4",
    "vue": "^3.5.22",
    "vue-router": "^4.5.1",
    "vue-tsc": "^3.1.1",
    "zod": "^4.1.12"
  },
  "engines": {
    "node": ">=22.0.0",
    "bun": ">=1.0.0"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,vue}": [
      "biome check --write"
    ],
    "**/*.{json,md,css,scss}": [
      "biome format --write"
    ]
  },
  "packageManager": "bun@1.2.23"
}
