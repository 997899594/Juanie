{
  "name": "juanie",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -n web,worker -c blue,green \"bun run dev:web\" \"bun run dev:worker\"",
    "dev:web": "bunx next dev --port 3001",
    "dev:worker": "tsx watch src/lib/queue/worker.ts",
    "dev:redis": "docker start juanie-redis 2>/dev/null || docker run --name juanie-redis -p 6379:6379 -d redis:7-alpine",
    "build": "bunx next build",
    "start": "bunx next start",
    "start:worker": "bun src/lib/queue/worker.ts",
    "lint": "bunx biome check",
    "format": "bunx biome format . --write",
    "db:generate": "bunx drizzle-kit generate",
    "db:push": "bunx drizzle-kit push",
    "db:studio": "bunx drizzle-kit studio",
    "db:seed": "tsx seed.ts"
  },
  "dependencies": {
    "@auth/drizzle-adapter": "^1.7.3",
    "@kubernetes/client-node": "^1.4.0",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-dialog": "^1.1.5",
    "@radix-ui/react-dropdown-menu": "^2.1.5",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-popover": "^1.1.5",
    "@radix-ui/react-select": "^2.1.5",
    "@radix-ui/react-separator": "^1.1.1",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-switch": "^1.1.2",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-toast": "^1.2.5",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@sentry/nextjs": "^10.40.0",
    "bullmq": "^5.70.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.38.3",
    "ioredis": "^5.9.3",
    "lucide-react": "^0.469.0",
    "nanoid": "^5.0.9",
    "next": "16.1.6",
    "next-auth": "beta",
    "postgres": "^3.4.5",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "tailwind-merge": "^2.6.0",
    "yaml": "^2.8.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "@tailwindcss/postcss": "^4.1.0",
    "@types/node": "^22.13.1",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "concurrently": "^9.2.1",
    "dotenv-cli": "^11.0.0",
    "drizzle-kit": "^0.30.1",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.3"
  }
}
