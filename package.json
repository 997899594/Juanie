{
  "name": "juanie",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "preview": "turbo preview --parallel",

    "packages:build": "turbo build --filter='./packages/*'",
    "packages:dev": "turbo dev --filter='./packages/*'",

    "web:dev": "turbo dev --filter='@juanie/web'",
    "api:dev": "turbo dev --filter='@juanie/api'",

    "type-check": "turbo type-check",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "clean": "turbo clean && rm -rf node_modules/.cache",
    "fresh": "bun run clean && bun i && bun run dev"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@changesets/cli": "^2.29.7",
    "estree-walker": "^2.0.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3",
    "@types/node": "^22.0.0",
    "@vitejs/plugin-vue": "^5.2.4",
    "vitest": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "rolldown": "1.0.0-beta.41",
    "vite": "^7.1.9",
    "vue-tsc": "^3.1.0",
    "vite-plugin-dts": "^4.5.4",
    "drizzle-kit": "^0.31.5"
  },
  "engines": {
    "node": ">=22.0.0",
    "bun": ">=1.0.0"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,vue}": [
      "biome check --write"
    ],
    "**/*.{json,md,css,scss}": [
      "biome format --write"
    ]
  },
  "packageManager": "bun@1.2.23"
}
