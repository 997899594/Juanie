{
  "name": "juanie",
  "version": "0.1.0",
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@changesets/cli": "^2.29.7",
    "estree-walker": "^2.0.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "turbo": "^2.5.8",
    "vitest": "catalog:",
    "typescript": "^5.9.3",
    "rolldown": "catalog:",
    "@vitejs/plugin-vue": "catalog:",
    "vite": "catalog:",
    "vue-tsc": "^3.1.0",
    "vite-plugin-dts": "^4.5.4",
    "@types/node": "catalog:",
    "drizzle-kit": "^0.31.5"
  },
  "engines": {
    "node": ">=22.0.0",
    "bun": ">=1.0.0"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,vue}": [
      "biome check --write"
    ],
    "**/*.{json,md,css,scss}": [
      "biome format --write"
    ]
  },
  "packageManager": "bun@1.2.23",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "type-check": "turbo type-check",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "lint:unsafe-fix": "biome check . --write --unsafe",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo build && changeset publish"
  },
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "typescript": "^5.9.3",
      "vite": "^7.1.7",
      "@types/node": "^22.0.0",
      "@biomejs/biome": "^2.2.5",
      "@vitejs/plugin-vue": "^5.2.3",
      "vitest": "^3.2.4",
      "@vitest/coverage-v8": "^3.2.4",
      "@vitest/ui": "^3.2.4",
      "naive-ui": "^2.43.1",
      "rolldown": "1.0.0-beta.41",
      "zod": "^4.1.11",
      "vue": "^3.5.22",
      "vue-router": "^4.5.1",
      "pinia": "^3.0.3",
      "unocss": "^66.5.2",
      "@unocss/preset-uno": "^66.5.2",
      "@unocss/preset-icons": "^66.5.2",
      "@unocss/preset-attributify": "^66.5.2"
    }
  }
}
