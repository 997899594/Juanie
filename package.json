{
  "name": "juanie",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/config/*",
    "packages/core",
    "packages/types",
    "packages/services/foundation",
    "packages/services/business",
    "packages/services/extensions"
  ],
  "trustedDependencies": [
    "@nestjs/config",
    "@nestjs/common",
    "@nestjs/core"
  ],
  "scripts": {
    "dev": "turbo run dev --concurrency=50",
    "dev:api": "turbo dev --filter='@juanie/api-gateway'",
    "dev:web": "turbo dev --filter='@juanie/web'",
    "dev:ui": "turbo dev --filter='@juanie/ui'",
    "build": "turbo build",
    "type-check": "turbo type-check",
    "check:env": "./scripts/check-env.sh",
    "check:config": "./scripts/check-config-deps.sh",
    "setup": "cp .env.example .env && echo '✅ 已创建 .env 文件,请编辑并填入实际值'",
    "docker:up": "docker-compose up -d postgres dragonfly ollama minio gitlab",
    "docker:up:all": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:ps": "docker-compose ps",
    "clean:processes": "pkill -f vite; pkill -f node; pkill -f bun; echo '进程已清理'",
    "clean:processes:win": "powershell -Command \"Get-Process | Where-Object {$_.ProcessName -match 'bun|node'} | Stop-Process -Force\"",
    "clean:stuck": "./scripts/kill-stuck-processes.sh",
    "diagnose": "./scripts/diagnose-build.sh",
    "fix:vite": "./scripts/fix-vite-freeze.sh",
    "dev:clean": "bun run clean:processes && bun run dev:web",
    "dev:safe": "./scripts/dev-web-safe.sh",
    "ui:build": "turbo build --filter='@juanie/ui'",
    "ui:build:fast": "cd packages/ui && bun run build:fast",
    "ui:build:ultra": "cd packages/ui && bun run build:ultra-fast",
    "ui:build:timeout": "cd packages/ui && ./scripts/build-with-timeout.sh",
    "ui:clean": "cd packages/ui && ./scripts/clean-build.sh",
    "db:generate": "dotenvx run -- bun x drizzle-kit generate --config ./packages/core/src/database/drizzle.config.ts",
    "db:push": "dotenvx run -- bun x drizzle-kit push --config ./packages/core/src/database/drizzle.config.ts",
    "db:migrate": "dotenvx run -- bun x drizzle-kit migrate --config ./packages/core/src/database/drizzle.config.ts",
    "db:studio": "dotenvx run -- bun x drizzle-kit studio --config ./packages/core/src/database/drizzle.config.ts",
    "cleanup": "./scripts/cleanup.sh",
    "check-quality": "./scripts/check-code-quality.sh",
    "extract-todos": "./scripts/extract-todos.sh",
    "format": "biome format --write .",
    "lint": "biome check .",
    "lint:fix": "biome check --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@changesets/cli": "^2.29.7",
    "@nestjs/testing": "^11.1.9",
    "@tailwindcss/vite": "^4.1.14",
    "@trpc/client": "^11.6.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^24.7.0",
    "@types/nprogress": "^0.2.3",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^4.0.4",
    "@vitest/ui": "^4.0.4",
    "@vue/tsconfig": "^0.8.1",
    "@vueuse/components": "^13.9.0",
    "@vueuse/core": "^13.9.0",
    "axios": "^1.12.2",
    "dayjs": "^1.11.18",
    "drizzle-kit": "^0.31.5",
    "echarts": "^6.0.0",
    "estree-walker": "^3.0.3",
    "husky": "^9.1.7",
    "lint-staged": "16.2.3",
    "lodash-es": "^4.17.21",
    "lucide-vue-next": "^0.544.0",
    "nestjs-pino": "^4.5.0",
    "nprogress": "^0.2.0",
    "pinia": "^3.0.3",
    "pino-http": "^11.0.0",
    "pino-pretty": "^13.1.3",
    "tailwindcss": "^4.1.14",
    "tsx": "^4.20.6",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3",
    "unplugin-auto-import": "^20.2.0",
    "unplugin-vue-components": "^29.1.0",
    "vite": "^7.1.9",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.4",
    "vue": "^3.5.22",
    "vue-router": "^4.5.1",
    "vue-tsc": "^3.1.1",
    "zod": "^4.1.12"
  },
  "engines": {
    "node": ">=22.0.0",
    "bun": ">=1.0.0"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,vue}": [
      "biome check --write"
    ],
    "**/*.{json,md,css,scss}": [
      "biome format --write"
    ]
  },
  "packageManager": "bun@1.2.23",
  "dependencies": {
    "@badrap/result": "^0.3.1",
    "@dotenvx/dotenvx": "^1.51.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.65.0",
    "@opentelemetry/exporter-jaeger": "^2.1.0",
    "drizzle-orm": "0.44.7",
    "postgres": "^3.4.7",
    "trpc-panel": "^1.3.4"
  }
}
